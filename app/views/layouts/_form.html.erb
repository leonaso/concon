<% if @recipe.errors.any? %>
<h2>The following errors prevented Concon from creating the recipe</h2>
  <ul>
    <% @recipe.errors.full_messages.each do | msg | %>
      <li>  
        <%= msg %> 
      </li>
    <% end %>  
  </ul>
<% end %>  

<%= form_for @recipe do | f | %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field  :title %>
  </p>
  <p>
    <%= f.label :description  %> <br>
    <%= f.text_area :description  %>
  </p>
  <p>
    <%= f.submit  %>
  </p>

<% end %>

<%= link_to "Back to recipes listing", recipes_path %>